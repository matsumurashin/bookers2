<h2>New book</h2>
<%= form_with model: @user do |f| %>
<%= f.label :Title %><br>
<%= f.text_field :title %><br>
<%= f.label :Opinion %><br>
<%= f.text_area :introduction %><br>
<%= f.submit 'Create Book' %>
<% end %>

<h2>Users</h2>
<table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag(user.get_profile_image(80,80)) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", users_path(user.id) %></td>
        </tr>
      <% end %>
    </tbody>
</table>