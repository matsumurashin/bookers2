<h2>User info</h2>
<%= image_tag current_user.get_profile_image(100,100) %>
<table>
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book_new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<table>
 <thead>
   <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
   </tr>
 </thead>

 <tbody>
   <% @books.each do |book| %>
     <tr>
       <td><%= link_to image_tag(book.user.get_profile_image(80,80)), user_path(book.user.id) %></td>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>
     </tr>
   <% end %>
 </tbody>
</table>